
<div class="wrapper-white">
  <div class="container">
    <div class="row text-center">
      <div class="cards-title">
        <h2>Recents campus</h2>
      </div>
      <% ["copenhagen", "lisbon", "amsterdam"].each do |city| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.1) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= city %>');">
            <div class="card-description">
              <h3><%= city.capitalize %></h3>
              <p>One of the greatest campus!</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
